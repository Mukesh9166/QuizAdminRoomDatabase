<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.QuizApp.SplashTheme" parent="Theme.QuizApp">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @android:color/transparent
        </item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomNavLabelActive">
        <item name="android:fontFamily">@font/causten_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="BottomNavLabelInactive">
        <item name="android:fontFamily">@font/causten_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>


    <style name="OptionsMenuText" parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textAppearance">@style/Body_V2</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="Title_V2" >
        <item name="android:fontFamily">@font/causten_extrabold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Body_V2" >
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/causten_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

</resources>